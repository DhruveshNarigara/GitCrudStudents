@model GitStudentCrud.Models.UserModel

<h2 class="text-center">Login</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="usernameOrEmail">Username or Email</label>
                    <input type="text" class="form-control form-control-sm" id="usernameOrEmail" asp-for="c_email" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control form-control-sm" id="password" asp-for="c_password" required />
                </div>
                &nbsp;
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a href="@Url.Action("Register", "User")">New user? Register here</a>
            </div>
        </div>
    </div>
</div>
